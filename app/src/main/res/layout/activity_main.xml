<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/zahnluecke">

    <Spinner
        android:id="@+id/spin_dropDownListTextauswahl"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="?android:attr/windowOverscan"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="21dp"
        android:layout_weight="1"
        android:background="@drawable/my_button"
        android:onClick="onClick_btn_start"
        android:text="Start"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/spin_dropDownListTextauswahl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="228dp"
        android:text="Textauswahl:"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>